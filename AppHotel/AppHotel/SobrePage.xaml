<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppHotel.SobrePage"
             Title="Sobre"
             BackgroundColor="#F0F8FF"> 

    <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">

        <Label Text="App Hotel"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#003366"/>

        <Label Text="Desenvolvido por: Filipe Pina Martins Costa"
               FontSize="18"
               HorizontalOptions="Center"
               TextColor="#004080"/>

        <Label Text="Ano de desenvolvimento: 2025"
               FontSize="18"
               HorizontalOptions="Center"
               TextColor="#004080"/>

        <Label Text="Aplicativo criado como parte do estudo do BindingContext no .NET MAUI."
               FontSize="16"
               HorizontalOptions="Center"
               TextColor="#006699"
               HorizontalTextAlignment="Center"/>

        <Button Text="Voltar"
                BackgroundColor="#004080"
                TextColor="White"
                CornerRadius="10"
                Clicked="OnVoltarClicked"/>
    </VerticalStackLayout>
</ContentPage>
